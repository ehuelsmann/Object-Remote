#!/usr/bin/env perl

use strictures 1;
use Object::Remote::Connector::STDIO;
use Object::Remote;

#$Object::Remote::Connection::DEBUG = 1;

my $c = Object::Remote::Connector::STDIO->new->connect;

my $loop = Object::Remote->current_loop;

$c->on_close(sub { $loop->stop });

print { $c->send_to_fh } "Shere\n";

$loop->run;
